# the following two lines give a two-line status, with the current window highlighted
hardstatus off # puts notifications at the bottom
hardstatus alwayslastline '%{#999999}[ GNU screen ]%{#ffffff} %< %{7}%?%-Lw%?%{1;0}%{#009dff}(== %{#ffffff}%n %h%?(%u)%?%{1;0}%{#009dff} ==)%{7}%?%+Lw%?%?'

# huge scrollback buffer
defscrollback 5000

# no welcome message
startup_message off

# --- START COLOR --- 
# Truecolor in screen >5.0.0 
truecolor on

# 256color in screen >4.09.01
# # Use 256-color terminfo
# term screen-256color
# 
# # Enable 256 colors
# attrcolor b ".I"
# defbce on
# termcapinfo xterm* ti@:te@
# termcapinfo screen-256color ti@:te@
# --- END COLOR --- 

# mouse tracking allows to switch region focus by clicking
mousetrack on

# Start window index at 1 rather than 0
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1

# Change escape code from ctrl-a to ctrl-b to match tmux binding.
escape ^Bb

# get rid of silly xoff stuff
bind s split
